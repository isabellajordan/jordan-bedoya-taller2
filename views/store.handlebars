        <input value={{valorAltura}} id="inputAltura" type="range" name="altura" min="10" max="100">



        <ul>
            {{#each productos}}
            <div class="producto">
                <a href="/product/{{nombre}}">
                    <img class= "producto__imagen" src="{{imagen.[0]}}" width="200px">
                    <h3 class="producto__nombre">{{nombre}}</h3>
                    <p class="producto__precio">{{precio}}</p>
                    <p class="producto__categoria">{{categoria}}</p>
                </a>

